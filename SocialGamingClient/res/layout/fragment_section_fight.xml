<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="376dp"
        android:layout_weight="1.12" >

        <ProgressBar
            android:id="@+id/health_enemy"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/image_enemy"
            android:layout_toLeftOf="@+id/image_enemy"
            android:layout_toRightOf="@+id/image_me" />

        <ImageView
            android:id="@+id/image_enemy"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="26dp"
            android:src="@drawable/image1" />

        <ProgressBar
            android:id="@+id/health_me"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_me"
            android:layout_alignLeft="@+id/health_enemy"
            android:layout_toLeftOf="@+id/image_enemy" />

        <TextView
            android:id="@+id/text_enemy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/health_enemy"
            android:layout_toLeftOf="@+id/image_enemy"
            android:text="50"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/text_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/health_me"
            android:layout_toRightOf="@+id/image_me"
            android:text="90"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:id="@+id/image_me"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="49dp"
            android:src="@drawable/image2" />

        <TextView
            android:id="@+id/happening"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Player1 used Attack 1"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp" >

        <Button
            android:id="@+id/fight"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.97"
            android:gravity="left|center_vertical"
            android:text="Fight" />

        <Button
            android:id="@+id/heal"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:text="Heal" />
    </LinearLayout>

</LinearLayout>