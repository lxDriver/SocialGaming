<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp" >

        <ImageView
            android:id="@+id/image_me"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/pferd" />

        <ProgressBar
            android:id="@+id/health_me"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/image_me"
            android:layout_marginTop="16dp" />

        <ImageView
            android:id="@+id/image_enemy"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_above="@+id/health_me"
            android:layout_alignParentRight="true"
            android:src="@drawable/dragon" />

        <TextView
            android:id="@+id/happening"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ProgressBar
            android:id="@+id/health_enemy"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/image_me"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="30dp" />

        <TextView
            android:id="@+id/my_health_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/health_me"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/enemy_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/enemy_level"
            android:layout_alignBottom="@+id/enemy_level"
            android:layout_alignParentRight="true"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/my_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/my_health_text"
            android:layout_alignBottom="@+id/my_health_text"
            android:layout_alignParentLeft="true"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/my_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/health_me"
            android:layout_toRightOf="@+id/image_me"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/enemy_text_health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/health_enemy"
            android:layout_marginTop="14dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/enemy_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/enemy_text_health"
            android:layout_alignBottom="@+id/enemy_text_health"
            android:layout_alignRight="@+id/happening"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/fight"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.97"
            android:gravity="left|center_vertical"
            android:text="Fight" />

        <Button
            android:id="@+id/items"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:text="Items" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_weather_attack"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.97"
            android:gravity="left|center_vertical"
            android:text="Weather Attack" />

        <Button
            android:id="@+id/btn_escape"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.97"
            android:gravity="left|center_vertical"
            android:text="Escape" />

    </LinearLayout>

</LinearLayout>